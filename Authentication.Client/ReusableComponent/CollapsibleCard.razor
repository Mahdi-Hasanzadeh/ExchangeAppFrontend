
<section class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-xl p-6 mb-10 border border-gray-200">
    <header class="flex justify-between items-center cursor-pointer select-none group"
            @onclick="OnToggle"
            role="button"
            aria-expanded="@IsOpen"
            tabindex="0">
        <div class="flex items-center gap-3">
            <div class="bg-indigo-100 p-2 rounded-lg shadow-inner">
                <i class="@Icon text-indigo-600 text-2xl"></i>
            </div>
            <h2 class="text-2xl font-semibold text-gray-800 tracking-tight">@Title</h2>
        </div>
        <i class="bi bi-chevron-down text-xl text-gray-500 transform transition-transform duration-300 group-hover:text-indigo-600 @(IsOpen ? "rotate-180" : "")"></i>
    </header>

    <div class="collapse-content transition-all duration-300 ease-in-out overflow-hidden @(IsOpen ? "max-h-screen mt-6 opacity-100" : "max-h-0 opacity-0")">
        @ChildContent
    </div>
</section>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Icon { get; set; } = "bi bi-card-text";
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnToggle { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
