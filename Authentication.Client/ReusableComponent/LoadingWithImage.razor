<div class="flex flex-col items-center justify-center mt-5">
    <!-- Spinner and Avatar Container -->
    <div class="relative">
        <!-- Animated Spinner -->
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="animate-spin rounded-full h-32 w-32 border-t-4 border-b-4 border-purple-500"></div>
        </div>
        <!-- Avatar Image -->
        <img src="images/avatar/avatar3.webp"
        alt="Loading Avatar"
        class="relative z-10 rounded-full h-28 w-28">
    </div>
    <!-- Loading Message -->
    <p class="mt-6 text-xl font-semibold text-gray-700">@Content</p>
</div>


@code{
    [Parameter]
    public string Content { get; set; } = "در حال بارگیری....";
}