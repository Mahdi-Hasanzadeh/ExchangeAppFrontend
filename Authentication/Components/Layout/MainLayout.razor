@using Authentication.Client.Pages
@using Authentication.Client.Pages.Account
@using Authentication.Components.Pages
@inherits LayoutComponentBase

<CustomToast></CustomToast>


<div class="min-h-screen flex flex-col">
<Layout />

    <!-- Main content -->
    <main class="flex-grow mx-4 my-4">
        @Body
    </main>

    <!-- Footer -->
    <footer class="border-t py-4 bg-gray-800 text-gray-100 text-lg">
        <div class="container mx-auto px-4">
            <div class="flex flex-col items-center md:flex-row md:justify-between md:items-center text-center gap-4">

                <!-- Left: Copyright -->
                <div class="text-center md:text-left w-full md:w-auto">
                    &copy; 2024-@DateTime.Now.Year
                    <span class="text-sm">تمامی حقوق محفوظ است.</span>
                </div>

                <!-- Center: App Name + Version -->
                <div class="text-center w-full md:w-auto">
                    <a href="/" class="text-lg" target="_blank" rel="noopener noreferrer">
                        <strong>صرافی</strong> <span class="text-gray-300">v1.0.0</span>
                    </a>
                </div>

                <!-- Right: Tagline -->
                <div class="text-center md:text-right w-full md:w-auto">
                    <span class="italic">امن، سریع و ساده برای مدیریت مالی شما</span>
                </div>
            </div>
        </div>
    </footer>


</div>

